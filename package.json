{
  "name": "sleek-dashboard",
  "version": "1.0.0-alpha.4",
  "description": "Premium & Free Bootstrap 4 admin dashboard template by TAFcoder.com",
  "author": "TAF Coder<hello@tafcoder.com> (https://tafcoder.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tafcoder/sleek-dashboard.git"
  },
  "homepage": "https://sleek.tafcoder.com/",
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "bootstrap",
    "admin",
    "dashboard",
    "responsive",
    "front-end",
    "admin-dashboard",
    "bootstrap4",
    "html",
    "theme",
    "dashboard-templates",
    "admin-panel",
    "admin-template",
    "uikit",
    "bootstrap-theme",
    "bootstrap-template",
    "admin",
    "bootstrap-admin-dashboard",
    "jekyll"
  ],
  "scripts": {

    "start": "npm-run-all --parallel serve css:watch",
    "serve": "bundle exec jekyll serve",
    "build": "bundle exec jekyll build",
    "dist": "npm-run-all clean:dist build css:prod css:rtl site:copy",
    "clean:dist": "rm -rf dist",
    "css": "node-sass src/assets/scss/sleek.scss _site/assets/css/styles.css --source-map true",
    "css:watch": "npm run css && node-sass -w src/assets/scss/sleek.scss _site/assets/css/styles.css --source-map true",
    "css:prod": "node-sass src/assets/scss/sleek.scss _site/assets/css/styles.css --output-style=compressed",
    "css:rtl": "rtlcss _site/assets/css/styles.css _site/assets/css/styles.rtl.css",
    "site:copy" : "cp -rf _site/ dist/ && cp -r src/assets/scss/ dist/assets/scss/"
  },
  "dependencies": {
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "rtlcss": "^2.4.0"
  }
}
